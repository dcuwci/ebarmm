# E-BARMM Backend Configuration
# Development environment

# Application
APP_NAME=E-BARMM API
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Database (connects to Docker PostgreSQL)
# Using psycopg (v3) driver - note the +psycopg in the URL
DATABASE_URL=postgresql+psycopg://ebarmm_app:DevPassword123@localhost:5432/ebarmm
DB_ECHO=False

# JWT Authentication
JWT_SECRET_KEY=dev-secret-key-change-in-production-min-32-chars-long-12345
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS (allows frontend dev server)
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000", "http://localhost:5174"]

# Object Storage (S3/MinIO - connects to Docker MinIO)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=ebarmm-media
S3_REGION=us-east-1
S3_USE_SSL=False

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=100

# File Upload
MAX_FILE_SIZE_MB=100
ALLOWED_IMAGE_TYPES=["image/jpeg", "image/png", "image/jpg", "image/gif", "image/webp"]
ALLOWED_VIDEO_TYPES=["video/mp4", "video/quicktime", "video/x-msvideo"]
ALLOWED_DOCUMENT_TYPES=["application/pdf"]

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Redis (connects to Docker Redis)
REDIS_URL=redis://localhost:6379/0

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090
