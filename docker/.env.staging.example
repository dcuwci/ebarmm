# E-BARMM Staging Environment Configuration
# Copy this file to .env.staging and fill in your values
# Usage: docker compose -f docker-compose.staging.yml --env-file .env.staging up -d

# =============================================================================
# DATABASE (Native PostgreSQL on EC2)
# =============================================================================
DB_USER=ebarmm_app
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
DB_NAME=ebarmm

# =============================================================================
# AWS S3 (Media Storage)
# =============================================================================
AWS_REGION=ap-southeast-1
S3_ACCESS_KEY=your-iam-access-key-id
S3_SECRET_KEY=your-iam-secret-access-key
S3_BUCKET=ebarmm-staging-media

# =============================================================================
# SECURITY
# =============================================================================
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=CHANGE_THIS_MINIMUM_32_CHARACTER_SECRET_KEY

# =============================================================================
# CORS (Allowed Origins)
# =============================================================================
# JSON array format - update with your staging domain
CORS_ORIGINS=["http://YOUR_EC2_ELASTIC_IP", "https://staging.yourdomain.com"]
